.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    padding: 20px;
    box-sizing: border-box;
  }
  
  .received-texts {
    font-size: 16px;
    line-height: 24px;
    color: #333;
  }
  .input-container {
    margin-bottom: 20px;
  }
  
  .input {
    width: 100%;
    height: 40px;
    padding: 0 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  
  .photo-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
  }
  
  .photo-image {
    width: 100px;
    height: 100px;
    margin-bottom: 10px;
  }
  
  .photo-btn {
    position: absolute;
    top: 500px;
    left: 10px;
    width: 120px;
    height: 40px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 4px;
    font-size: 16px;
  }
  
